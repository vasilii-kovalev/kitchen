{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"lib": [
			"ESNext"
		],
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"noEmit": true,
		"noUncheckedIndexedAccess": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"verbatimModuleSyntax": true
	},
	"include": [
		"src",
		"index.ts",
		"eslint.config.ts"
	]
}
